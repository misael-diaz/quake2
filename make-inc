# Linux LLVM C Compiler (clang)
CC = clang-12
# GNU C Compiler
CC = gcc-11
CC = gcc-10
CC = gcc-9
CC = gcc

# Linux LLVM C Compiler (clang) Options
CCOPT = -std=gnu17 -g -Wall -O0
# Linux GNU C Compiler Options
CCOPT = -std=gnu2x -g -Wall -Wextra -O0
